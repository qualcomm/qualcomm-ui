{
  "name": "@qualcomm-ui/root",
  "version": "0.0.0",
  "description": "@qui monorepo",
  "private": true,
  "repository": "https://github.qualcomm.com/ProdTools/qui",
  "type": "module",
  "scripts": {
    "clean-tsbuildinfo": "shx rm -rf packages/*/*/dist/tsbuildinfo",
    "force-clean": "shx rm -rf packages/*/*/dist",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "node scripts/post-install.mjs",
    "build": "turbo run build --filter=!./packages/configs/* --filter=!./packages/docs/*",
    "build:docs": "turbo run build --filter=./packages/docs/*",
    "dev": "turbo run dev --filter=!./packages/docs/*",
    "dev:react": "turbo run dev --filter=@qualcomm-ui/react-docs --filter=@qualcomm-ui/core --filter=@qualcomm-ui/qds-core --filter=@qualcomm-ui/react-core --filter=@qualcomm-ui/react",
    "dev:angular": "turbo run dev --filter=@qualcomm-ui/angular-core --filter=@qualcomm-ui/angular",
    "dev:react-deps": "turbo run dev --filter '@qualcomm-ui/mdx-*...'",
    "build:typedoc:ci": "turbo run build:typedoc --filter=$PACKAGE_NAME",
    "angular": "pnpm -C packages/frameworks/angular",
    "angular-core": "pnpm -C packages/frameworks/angular-core",
    "react": "pnpm -C packages/frameworks/react",
    "react-core": "pnpm -C packages/frameworks/react-core",
    "angular-docs": "pnpm -C packages/docs/angular-docs",
    "angular-table-docs": "pnpm -C packages/docs/angular-table-docs",
    "react-docs": "pnpm -C packages/docs/react-docs",
    "react-mdx-docs": "pnpm -C packages/docs/react-mdx-docs",
    "react-table-docs": "pnpm -C packages/docs/react-table-docs",
    "core": "pnpm -C packages/common/core",
    "dom": "pnpm -C packages/common/dom",
    "mdx-docs": "pnpm -C packages/frameworks/mdx-docs",
    "mdx-vite": "pnpm -C packages/common/mdx-vite",
    "utils": "pnpm -C packages/common/utils",
    "test": "turbo run test",
    "lint": "turbo run lint --continue",
    "lint:ci": "turbo run lint --concurrency 6",
    "test:unit:ci": "turbo run test:unit:ci --concurrency 2",
    "doc-gen": "turbo run build:typedoc"
  },
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@commander-js/extra-typings": "^14.0.0",
    "@eslint/js": "catalog:",
    "@qualcomm-ui/eslint-config-angular": "workspace:*",
    "@qualcomm-ui/eslint-config-react": "workspace:*",
    "@qualcomm-ui/eslint-config-mdx": "workspace:*",
    "@qualcomm-ui/eslint-config-typescript": "workspace:*",
    "@qualcomm-ui/eslint-plugin-path-alias": "workspace:*",
    "@types/node": "~24.9.2",
    "commander": "^14.0.2",
    "cross-env": "^10.1.0",
    "eslint": "9.37.0",
    "execa": "^9.6.0",
    "ignore": "^7.0.5",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "pretty-ms": "^9.3.0",
    "shx": "^0.4.0",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "syncpack": "14.0.0-alpha.19",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "5.8.3",
    "typescript-eslint": "catalog:"
  },
  "resolutions": {
    "playwright": "1.53.2",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
