{
  "name": "@qualcomm-ui/angular-core",
  "description": "Design-agnostic Angular building blocks and utilities.",
  "version": "1.0.4",
  "author": "Ryan Bower",
  "license": "BSD-3-Clause-Clear",
  "repository": "https://github.com/qualcomm/qualcomm-ui",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./*": {
      "types": "./dist/*/index.d.ts",
      "import": "./dist/fesm2022/qualcomm-ui-angular-core-*.mjs",
      "default": "./dist/fesm2022/qualcomm-ui-angular-core-*.mjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "ng": "ng",
    "build": "ng-packagr -p src/ng-package.json -c tsconfig.lib.json",
    "dev": "pnpm build --watch",
    "lint": "eslint --quiet",
    "test": "vitest --run --pool=forks",
    "test:coverage": "vitest --run --coverage --coverage.enabled=true",
    "test:angular-core:ci": "cross-env NODE_OPTIONS='' vitest -c vitest.config.ts --run --pool=forks --no-file-parallelism",
    "test:ui": "vitest --ui",
    "build:bundle-size": "ng build test-bundle-size-app",
    "analyze-bundle": "source-map-explorer bundle-size-dist/main.js",
    "explore-bundle": "run-s build:bundle-size analyze-bundle",
    "publish-angular-package": "tsx apply-package && qui-cli publish-angular qui-angular-core"
  },
  "devDependencies": {
    "@analogjs/platform": "catalog:",
    "@analogjs/vite-plugin-angular": "catalog:",
    "@analogjs/vitest-angular": "catalog:",
    "@angular/build": "catalog:",
    "@angular-devkit/architect": "catalog:",
    "@angular-devkit/build-angular": "catalog:",
    "@angular-devkit/core": "catalog:",
    "@angular/cdk": "catalog:",
    "@angular/cdk-experimental": "catalog:",
    "@angular/cli": "catalog:",
    "@angular/common": "catalog:",
    "@angular/compiler": "catalog:",
    "@angular/compiler-cli": "catalog:",
    "@angular/core": "catalog:",
    "@angular/forms": "catalog:",
    "@angular/platform-browser": "catalog:",
    "@angular/platform-browser-dynamic": "catalog:",
    "@angular/platform-server": "catalog:",
    "@angular/router": "catalog:",
    "@angular/ssr": "catalog:",
    "@faker-js/faker": "~9.6.0",
    "@floating-ui/dom": "^1.7.0",
    "@jsdevtools/coverage-istanbul-loader": "~3.0.5",
    "@module-federation/enhanced": "0.21.2",
    "@qualcomm-ui/core": "workspace:^1.0.6",
    "@qualcomm-ui/cli": "workspace:^1",
    "@qualcomm-ui/dom": "workspace:^1.0.5",
    "@qualcomm-ui/tailwind-plugin": "workspace:^1.1.0",
    "@qualcomm-ui/tsconfig": "workspace:^1.0.3",
    "@qualcomm-ui/utils": "workspace:^1.0.3",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/virtual-core": "^3.13.12",
    "@testing-library/angular": "^17.3.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/mocha": "^10.0.10",
    "@vitest/browser": "^4.0.8",
    "@vitest/browser-playwright": "^4.0.8",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "execa": "^9.6.0",
    "lucide-angular": "0.525.0",
    "ng-packagr": "~20.3.2",
    "playwright": "1.53.2",
    "resize-observer-polyfill": "^1.5.1",
    "rxjs": "~7.8.0",
    "shx": "^0.4.0",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "tslib": "~2.5.3",
    "tsx": "^4.20.6",
    "typescript": "5.9.3",
    "vite": "npm:rolldown-vite@7.1.19",
