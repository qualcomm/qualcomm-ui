    "@angular/platform-browser": ">=20 <22",
    "@angular/platform-browser-dynamic": ">=20 <22",
    "@qualcomm-ui/core": "workspace:^1.0.6",
    "@qualcomm-ui/dom": "workspace:^1.0.5",
    "@qualcomm-ui/utils": "workspace:^1.0.3",
    "@tanstack/virtual-core": ">=3.13.12",
    "lucide-angular": ">=0.487.0 <1",
    "typescript": ">=5.2.0 <6"
  },
  "nyc": {
    "reporter": [
      "cobertura",
      "html"
    ],
    "extension": [
      ".js",
      ".cjs",
      ".mjs",
      ".ts"
    ]
  }
}
