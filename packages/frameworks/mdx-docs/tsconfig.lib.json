{
  "extends": "@qualcomm-ui/tsconfig/tsconfig.super-strict.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "dist/tsbuildinfo",
    "paths": {
      "@qualcomm-ui/mdx-docs/*": ["./src/*/index.ts"]
    }
  },
  "include": ["./src"],
  "exclude": ["./src/**/*.spec.tsx"]
}