      "~test-utils/runner": ["./test-utils/runner.ts"]
    }
  },
  "include": ["./src"],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "../react-core/tsconfig.lib.json"
    }
  ]
}
