{
  "name": "@qualcomm-ui/react-router-utils",
  "version": "1.0.0",
  "description": "Utilities for React Router",
  "author": "Ryan Bower",
  "type": "module",
  "exports": {
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./node": {
      "types": "./dist/node/index.d.ts",
      "default": "./dist/node/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s clean build:js build:ts",
    "clean": "shx rm -rf dist/tsbuildinfo dist/**/*.js dist/**/*.cjs dist/**/*.mjs dist/**/*.js.map",
    "build:js": "tsx build.ts",
    "build:ts": "tsc -b tsconfig.lib.json",
    "dev": "run-p watch:js watch:ts",
    "watch:js": "tsx build.ts --watch",
    "watch:ts": "pnpm build:ts -w --preserveWatchOutput",
    "lint": "eslint --quiet",
    "prepublishOnly": "qui-cli pre-publish",
    "postpublish": "qui-cli post-publish"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "minimatch": "^5.1.0"
  },
  "devDependencies": {
    "@qualcomm-ui/esbuild": "workspace:^1",
    "@qualcomm-ui/tsconfig": "workspace:^1",
    "@types/minimatch": "^5.1.2",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "esbuild": "^0.25.8",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-router": "catalog:",
    "shx": "^0.4.0",
    "tsx": "^4.20.6",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "minimatch": ">=10.0.3",
    "react-router": ">=7.0.2 <8",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  }
}
