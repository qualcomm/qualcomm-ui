{
  "name": "@qualcomm-ui/core",
  "version": "1.0.4",
  "description": "core components",
  "author": "Ryan Bower",
  "license": "BSD-3-Clause-Clear",
  "repository": "https://github.com/qualcomm/qualcomm-ui",
  "type": "module",
  "exports": {
    "./*": {
      "types": "./dist/*/index.d.ts",
      "import": "./dist/*/index.js",
      "default": "./dist/*/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s clean build:js build:ts",
    "clean": "shx rm -rf dist/tsbuildinfo dist/**/*.js dist/**/*.cjs dist/**/*.mjs dist/**/*.js.map",
    "build:js": "tsx build.ts",
    "build:ts": "tsc -b tsconfig.lib.json",
    "dev": "run-p watch:js watch:ts",
    "watch:js": "tsx build.ts --watch",
    "watch:ts": "pnpm build:ts -w --preserveWatchOutput",
    "lint": "eslint --quiet",
    "test": "vitest -c vitest.config.ts --run --reporter tap",
    "test:ui": "vitest -c vitest.config.ts --ui --coverage.enabled=true",
    "test:coverage": "pnpm test -- --coverage",
    "test:watch": "vitest -c vitest.config.ts",
    "test:unit:ci": "cross-env NODE_OPTIONS='' vitest -c vitest.config.ts --run --pool=threads",
    "prepublishOnly": "qui-cli pre-publish",
    "postpublish": "qui-cli post-publish"
  },
  "devDependencies": {
    "@faker-js/faker": "~9.6.0",
    "@internationalized/number": "^3.6.4",
    "@qualcomm-ui/cli": "workspace:^1.0.4",
    "@qualcomm-ui/css-utils": "workspace:^1.0.2",
    "@qualcomm-ui/dom": "workspace:^1.0.2",
    "@qualcomm-ui/esbuild": "workspace:^1.0.2",
    "@qualcomm-ui/tsconfig": "workspace:^1.0.2",
    "@qualcomm-ui/utils": "workspace:^1.0.2",
    "@types/node": "~24.9.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.25.8",
    "shx": "^0.4.0",
    "tsx": "^4.20.6",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@internationalized/number": ">=3.6.4",
    "@qualcomm-ui/dom": "workspace:^1.0.2",
    "@qualcomm-ui/utils": "workspace:^1.0.2"
  }
}
