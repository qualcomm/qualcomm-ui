{
  "name": "@qualcomm-ui/mdx-vite",
  "version": "1.0.2",
  "description": "Vite documentation plugin for applications that use MDX",
  "repository": "https://github.com/qualcomm/qualcomm-ui",
  "author": "Ryan Bower",
  "license": "BSD-3-Clause-Clear",
  "type": "module",
  "bin": {
    "qui-mdx-vite": "./lib/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./angular-demo-plugin": {
      "types": "./dist/angular-demo-plugin/virtual.d.ts"
    },
    "./docs-plugin": {
      "types": "./dist/docs-plugin/virtual.d.ts"
    },
    "./react-demo-plugin": {
      "types": "./dist/react-demo-plugin/virtual.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "run-s clean compile",
    "compile": "run-s build:js build:types",
    "clean": "shx rm -rf dist/tsbuildinfo dist/**/*.js dist/**/*.cjs dist/**/*.mjs dist/**/*.js.map",
    "build:js": "tsx build.ts",
    "build:types": "tsc -b tsconfig.lib.json",
    "dev": "run-p watch:js watch:types",
    "watch:js": "pnpm build:js --watch",
    "watch:types": "pnpm build:types -w --preserveWatchOutput",
    "lint": "eslint --quiet",
    "prepublishOnly": "qui-cli pre-publish",
    "postpublish": "qui-cli post-publish",
    "test": "vitest -c vitest.config.ts --run",
    "update-snapshots": "cross-env UPDATE_SNAPSHOTS=true pnpm test",
    "test:ui": "vitest -c vitest.config.ts --ui --coverage.enabled=true",
    "test:coverage": "pnpm test -- --coverage",
    "test:watch": "vitest -c vitest.config.ts",
    "test:unit:ci": "cross-env NODE_OPTIONS='' vitest -c vitest.config.ts --run --pool=threads"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@shikijs/rehype": "^3.13.0",
    "@shikijs/transformers": "^3.13.0",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "cosmiconfig": "^9.0.0",
    "es-module-lexer": "^1.7.0",
    "glob": "^11.0.3",
    "hast-util-from-html": "^2.0.1",
    "hast-util-heading": "^3.0.0",
    "hast-util-heading-rank": "^3.0.0",
    "hast-util-to-string": "^3.0.0",
    "hast-util-to-text": "^4.0.2",
    "mdast-util-from-markdown": "^2.0.1",
    "mdast-util-mdx-jsx": "^3.2.0",
    "mdast-util-to-string": "^4.0.0",
    "pretty-ms": "^9.3.0",
    "rehype-parse": "^9.0.1",
    "rehype-remark": "^10.0.1",
    "rehype-stringify": "^10.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx": "^3.0.1",
    "remark-parse": "^11.0.0",
    "remark-parse-frontmatter": "^1.0.3",
    "remark-rehype": "^11.1.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-filter": "^5.0.1",
    "unist-util-find": "^3.0.0",
    "unist-util-remove": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@qualcomm-ui/cli": "workspace:^1.0.3",
    "@qualcomm-ui/esbuild": "workspace:^1.0.2",
    "@qualcomm-ui/mdx-common": "workspace:^1.0.2",
    "@qualcomm-ui/utils": "workspace:^1.0.2",
    "@qualcomm-ui/tsconfig": "workspace:^1.0.2",
    "@qualcomm-ui/typedoc-common": "workspace:^1.0.2",
    "@types/hast": "^3.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/mdast": "^4.0.4",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "change-case": "^5.4.4",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.1",
    "esbuild": "^0.25.8",
    "hastscript": "^9.0.0",
    "lodash-es": "^4.17.21",
    "ora": "^9.0.0",
    "rehype-mdx-code-props": "^3.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx-frontmatter": "^4.0.0",
    "shiki": "^3.13.0",
    "shx": "^0.4.0",
    "test": "^3.3.0",
    "tsx": "^4.20.6",
    "typescript": "5.8.3",
    "vite": "npm:rolldown-vite@7.1.19",
    "vitest": "^3.2.4",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "@qualcomm-ui/mdx-common": "workspace:^1.0.2",
    "@qualcomm-ui/typedoc-common": "workspace:^1.0.2",
    "@qualcomm-ui/utils": "workspace:^1.0.2",
    "lodash-es": ">=4.17.21 <5",
    "rehype-mdx-code-props": ">=3 <4",
    "remark-frontmatter": ">=5 <6",
    "remark-gfm": ">=4 <5",
    "remark-mdx-frontmatter": ">=4 <5",
    "shiki": ">=3.7.0",
    "typescript": ">=5.5.4",
    "vite": ">=7 <8"
  }
}
