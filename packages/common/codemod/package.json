{
  "name": "@qualcomm-ui/codemod",
  "version": "1.0.0",
  "description": "Codemod for version updates",
  "author": "Ryan Bower",
  "license": "BSD-3-Clause-Clear",
  "type": "module",
  "repository": "https://github.com/qualcomm/qualcomm-ui",
  "bin": {
    "qui-codemod": "./lib/cli.cjs"
  },
  "sideEffects": false,
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build": "run-s clean build:js build:ts",
    "clean": "shx rm -rf dist/tsbuildinfo dist/**/*.js dist/**/*.cjs dist/**/*.mjs dist/**/*.js.map",
    "build:js": "tsx build.ts",
    "build:ts": "tsc -b tsconfig.lib.json",
    "dev": "run-p watch:js watch:ts",
    "watch:js": "tsx build.ts --watch",
    "watch:ts": "pnpm build:ts -w --preserveWatchOutput",
    "lint": "eslint --quiet",
    "test": "vitest -c vitest.config.ts --run",
    "test:ui": "vitest -c vitest.config.ts --ui --coverage.enabled=true",
    "test:coverage": "pnpm test -- --coverage",
    "test:watch": "vitest -c vitest.config.ts",
    "test:unit:ci": "cross-env NODE_OPTIONS='' vitest -c vitest.config.ts --run --pool=threads",
    "prepublishOnly": "qui-cli pre-publish",
    "postpublish": "qui-cli post-publish"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@qualcomm-ui/esbuild": "workspace:^1.0.3",
    "@qualcomm-ui/tsconfig": "workspace:^1.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "~24.9.2",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.2",
    "dayjs": "^1.11.19",
    "esbuild": "^0.25.8",
    "glob": "^11.1.0",
    "npm-run-all2": "^8.0.4",
    "ora": "^9.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx-frontmatter": "^4.0.0",
    "remark-parse-frontmatter": "^1.0.3",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "shx": "^0.4.0",
    "ts-morph": "^25.0.1",
    "tsx": "^4.20.6",
    "typescript": "5.9.3",
    "unified": "^11.0.5",
    "vite": "npm:rolldown-vite@7.2.6",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "@qualcomm-ui/utils": "workspace:^1.0.3"
  }
}
