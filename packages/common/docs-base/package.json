{
  "name": "@qualcomm-ui/docs-base",
  "version": "0.0.0",
  "description": "QUI shared dev styles and utilities for documentation, used by both React and Angular documentation projects.",
  "author": "Ryan Bower",
  "license": "BSD-3-Clause-Clear",
  "repository": "https://github.com/qualcomm/qualcomm-ui",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "run-s clean build:components build:ts",
    "clean": "shx rm -rf dist",
    "build:components": "vite build -c vite.config.ts",
    "build:ts": "tsc -b tsconfig.lib.json --force",
    "dev": "run-p watch:components watch:ts",
    "watch:components": "vite build -c vite.config.ts -w --emptyOutDir=false",
    "watch:ts": "pnpm build:ts -w --preserveWatchOutput",
    "lint": "eslint --quiet"
  },
  "devDependencies": {
    "@qualcomm-ui/tsconfig": "workspace:^1.0.3",
    "@types/stringify-object": "^4.0.5",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "shx": "^0.4.0",
    "stringify-object": "^5.0.0",
    "ts-key-enum": "^2.0.12",
    "tsx": "^4.20.6",
    "typedoc": "~0.28.13",
    "typescript": "5.9.3",
    "vite": "npm:rolldown-vite@7.1.19",
    "vitest": "^4.0.8"
  }
}
