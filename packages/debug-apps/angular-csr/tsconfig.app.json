/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@qualcomm-ui/angular/*": ["../../frameworks/angular/src/*/index.ts"],
      "@qualcomm-ui/angular-core/*": ["../../frameworks/angular-core/src/*/index.ts"],
      "@qualcomm-ui/docs-base": ["../../common/docs-base/src"],
      "@qualcomm-ui/angular-docs/*": ["../../docs/angular-docs/src/routes/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../../docs/angular-docs/tsconfig.ng-demos.json"
    }
  ]
}
